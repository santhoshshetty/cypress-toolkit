{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es5", "dom"],
    "types": ["node", "cypress"],
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "lib/cjs/",
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["cypress/**/*.ts", "cypress/**/*.tsx", "cypress/**/*.cy.tsx"],
  "exclude": ["cypress/examples", "node_modules", "lib"]
}
